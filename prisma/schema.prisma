generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Member {
  guildId  String @db.VarChar(18)
  userId   String @db.VarChar(18)
  tone     Float
  speed    Float
  f0       Float
  htsvoice String

  @@id([guildId, userId])
}

model Emoji {
  guildId        String @db.VarChar(18)
  emojiId        String @db.VarChar(18)
  pronounciation String

  @@id([guildId, emojiId])
}

model GuildDictionary {
  guildId     String
  replaceFrom String
  replaceTo   String

  @@id([guildId, replaceFrom])
}

model GuildSettings {
  guildId             String  @id
  readMultiLine       Boolean @default(true)
  readSpeakersName    Boolean @default(false)
  readEmojis          Boolean @default(true)
  omitThreashold      Int     @default(200)
  dictionaryWriteRole String
}
