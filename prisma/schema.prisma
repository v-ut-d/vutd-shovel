generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Member {
  guildId  String @db.VarChar(18)
  userId   String @db.VarChar(18)
  tone     Int
  speed    Int
  f0       Int
  htsvoice String

  @@id([guildId, userId])
}

model Emoji {
  guildId        String   @db.VarChar(18)
  emojiId        String   @db.VarChar(18)
  pronounciation String

  @@id([guildId, emojiId])
}
